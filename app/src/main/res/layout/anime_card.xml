<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="14dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    android:layout_height="270dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="@drawable/tarea">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nombre"
            android:layout_alignTop="@+id/imagen"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/imagen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/visitas"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/imagen"
            android:layout_toRightOf="@+id/imagen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:text="Ingrese fecha"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imagen"
            android:layout_toLeftOf="@+id/visitas"
            android:layout_toStartOf="@+id/visitas" />

        <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonGuardar"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/editText2"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonBorrar"
            android:layout_alignBaseline="@+id/botonGuardar"
            android:layout_alignBottom="@+id/botonGuardar"
            android:layout_toRightOf="@+id/botonGuardar"
            android:layout_toEndOf="@+id/botonGuardar"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <CheckBox
            android:text="Listo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxListo"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_alignBaseline="@+id/botonBorrar"
            android:layout_alignBottom="@+id/botonBorrar"
            android:layout_toRightOf="@+id/botonBorrar"
            android:layout_toEndOf="@+id/botonBorrar" />

    </RelativeLayout>

</android.support.v7.widget.CardView>